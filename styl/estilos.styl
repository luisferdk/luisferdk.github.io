/*
display: flex /* or inline-flex
flex-direction: row | row-reverse | column | column-reverse
justify-content: flex-start | flex-end | center | space-between | space-around
align-items: flex-start | flex-end | center | baseline | stretch
*/
alinear(a,b,c)
  display flex
  flex-direction a
  justify-content b
  align-items c
body
  margin 0
  alinear(column,center,center)
  
.fondo
  alinear(column,space-between,center)
  background-image: url("../img/fondo.jpg")
  background-repeat: no-repeat
  background-size: 100%
  width 100%
  height 100vh
    
.cabecera
  position: fixed
  width 100%
  height 4em
  background rgba(0,0,0,0.7)
  alinear(row,space-between,center)
  &-logo
    border-top: 0.07rem solid
    border-bottom: 0.07rem solid
    font-size 2rem
    margin-left 5%
    color white
  &-redes
    alinear(row,space-around,center)
    list-style-type:none
    margin-right 5%
    width 40%
    li
      img
        width 30%
.cuadros
  alinear(row,space-around,center)
  margin-bottom: 2rem
  text-align: center
  width 100%
  font-family: 'Crimson Text', serif
    
  article
    width 20%
    height 8rem
    background-color rgba(0,0,0,0.7)
    color white
    box-shadow: 8px 8px 1px rgba(255,255,255,0.8);
  h1
    margin 0
  p
    font-size: 0.9em
        
.proyectos
  alinear(row,space-around,center)
  width 100%
  
  article
    width 30%
    text-align: center
    height 500px
    